@* Generator: Template TypeVisibility: Internal GeneratePrettyNames: true *@

@using LogDashboard.Views
@inherits LogDashboard.Views.RazorPage
@{
    Layout = new _layout { Context = Context, Section = { ["Scripts"] = $"<script src='{Context.Options.PathMatch}/js.basicLog.js'></script>" }, ViewData = ViewData };
}
<div class="card">
    <div class="card-header border border-top-0 border-right-0 border-left-0">
        日志
    </div>
    <div class="card-body">
        <form>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="all">
                            <label class="custom-control-label" for="all">所有</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="today">
                            <label class="custom-control-label" for="today">今天</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" id="hour">
                            <label class="custom-control-label" for="hour">一小时</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Message" class="form-control-label">Message</label>
                        <input id="Message" class="form-control" placeholder="Message">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Level" class="form-control-label">日志级别</label>
                        <select id="Level" class="form-control">
                            <option value="">All</option>
                            <option value="TRACE">Trace</option>
                            <option value="DEBUG">Debug</option>
                            <option value="INFORMATION">Info</option>
                            <option value="WARNING">Warn</option>
                            <option value="ERROR">Error</option>
                            <option value="FATAL">Fatal</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="StartTime" class="form-control-label">开始时间</label>
                        <input type="text" class="form-control datetimepicker-input" id="StartTime" data-toggle="datetimepicker" data-target="#StartTime" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="EndTime" class="form-control-label">结束时间</label>
                        <input type="text" class="form-control datetimepicker-input" id="EndTime" data-toggle="datetimepicker" data-target="#EndTime" />
                    </div>
                </div>
            </div>
            @{
                if (Context.Options.CustomPropertyInfos.Count > 0)
                {
                        <div class="row" id="applicationLogModel" style="display:none">
                            @{
                            foreach (var propertyInfo in Context.Options.CustomPropertyInfos)
                            {
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <label for="@propertyInfo.Name" class="form-control-label">@propertyInfo.Name</label>
                                                <input id="@propertyInfo.Name" class="form-control" placeholder="@propertyInfo.Name">
                                            </div>
                                        </div>
                            }
                            }
                        </div>
                        <div class="row">
                            <div class="col-md-12 d-flex justify-content-end"><a id="showMoreSearch" href="javascript:;">展开/折叠>></a></div>
                        </div>
                }
            }
            <button class="btn btn-outline-primary" id="searchBtn">查询</button>
        </form>

    </div>
    <div id="LogList">
        @Raw(ViewData["logs"])
    </div>
    <div id="page">
        @Raw(ViewData["page"])
    </div>
</div>
